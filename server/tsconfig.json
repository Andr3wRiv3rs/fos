{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@interfaces/*": ["../@interfaces/*"],
    },
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "rollup"]
}