{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    // "types": [
    //   "webpack-env",
    //   "node",
    // ],
    "typeRoots": [
      "./node_modules/@types",
      "@interfaces"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@interfaces": ["interfaces/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "@interfaces/**/*.d.ts",
    "server/**/*.ts",
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "client/src/**/*.vue", 
  ],
  
  "exclude": [
    "node_modules"
  ]
}
